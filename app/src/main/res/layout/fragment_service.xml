<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginBottom="60dp"
    tools:context="com.mahya.appsolution.ServiceFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:id="@+id/imageViewServiceOne"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <ImageView
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:id="@+id/imageViewServiceTwo"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/textViewServiceTwo"
                    android:textColor="#000000"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/textViewServiceThree"
                    android:textColor="#000000"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"/>

                <ImageView
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:id="@+id/imageViewServiceThree"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <ImageView
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:id="@+id/imageViewServiceFour"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/textViewServiceFour"
                    android:textColor="#000000"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
